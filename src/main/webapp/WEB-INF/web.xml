<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
         http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">

  <display-name>ProjetDAI Web Application</display-name>

  <!-- 配置欢迎页面 -->
  <welcome-file-list>
    <welcome-file>index</welcome-file>
  </welcome-file-list>

  <servlet>
    <servlet-name>index</servlet-name>
    <jsp-file>/jsp/index.jsp</jsp-file>
  </servlet>

  <servlet-mapping>
    <servlet-name>index</servlet-name>
    <url-pattern>/index</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>article</servlet-name>
    <jsp-file>/jsp/article.jsp</jsp-file>
  </servlet>

  <servlet-mapping>
    <servlet-name>article</servlet-name>
    <url-pattern>/article</url-pattern>
  </servlet-mapping>

  <!-- 配置 Servlets -->
  <servlet>
    <servlet-name>ServletPanier</servlet-name>
    <servlet-class>Servlet.ServletPanier</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ServletPanier</servlet-name>
    <url-pattern>/panier</url-pattern>
  </servlet-mapping>


  <servlet>
    <servlet-name>ServletAddPanier</servlet-name>
    <servlet-class>Servlet.ServletAddPanier</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ServletAddPanier</servlet-name>
    <url-pattern>/addToPanier</url-pattern>
  </servlet-mapping>


</web-app>
